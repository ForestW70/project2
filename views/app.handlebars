    <div class="touch-int col-6">

        <div id="drumEdit">
            <h3>Select Options</h3>

            <!-- kits -->
            <label for="kits">kit:</label>
            <select name="kits" id="kits" onchange="drumGen(this.value)">
                <option value="technoDrums">techno kit</option>
                <option value="opfmDrums">4OP-FM kit</option>
                <option value="acousticDrums">acoustic kit</option>
                <option value="breakbeat8Drums">break beat 8</option>
                <option value="breakbeat9Drums">break beat 9</option>
                <option value="breakbeat13Drums">break beat 13</option>
            </select>

            <!-- effects -->
            <div id="effectsCont" class="">
                <label for="reverb">reverb:</label>
                <select name="reverb" id="reverb" onchange="setReverb(this.value)">
                    <option value="0">off</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>

                <label for="distortion">distortion:</label>
                <select name="distortion" id="distortion" onchange="setDistortion(this.value)">
                    <option value="0">off</option>
                    <option value=".1">1</option>
                    <option value=".2">2</option>
                    <option value=".3">3</option>
                    <option value=".4">4</option>
                    <option value=".5">5</option>
                </select>

                <label for="pingDelay">Delay:</label>
                <select name="pingDelay" id="pingDelay" onchange="setDelay(this.value)">
                    <option value="0">off</option>
                    <option value=".05">1</option>
                    <option value=".1">2</option>
                    <option value=".13">3</option>
                    <option value=".17">4</option>
                    <option value=".23">5</option>
                </select>

                <label for="pingFeedback">Feedback:</label>
                <select name="pingFeedback" id="pingFeedback" onchange="setDelay(this.value)">
                    <option value=".25">off</option>
                    <option value=".5">1</option>
                    <option value=".75">2</option>
                    <option value="1">3</option>
                </select>
            </div>
            <div class="log-vals">
                <h2 id="log">Current values:</h2>
                <div>
                    <div class="show">
                        <span>Song title:</span>
                        <span id="stLog">{{projectData.song_title}}</span>

                        <span>Song artist:</span>
                        <span id="saLog">{{projectData.username}}</span>

                        <span>Song description:</span>
                        <span id="sdLog">{{projectData.song_description}}</span>
                    </div>
                    <div class="show">
                        <span>Drum kit:</span>
                        <span id="dkvLog">{{projectData.drum_kit}}</span>

                        <span>Reverb value:</span>
                        <span id="rvLog">{{projectData.reverb_val}}</span>

                        <span>Distortion value:</span>
                        <span id="dvLog">{{projectData.distortion_val}}</span>

                        <span>Delay value:</span>
                        <span id="ppdvLog">{{projectData.delay_val}}</span>

                        <span>Feedback value:</span>
                        <span id="ppfvLog">{{projectData.feedback_val}}</span>

                        <span>Melody reverb value:</span>
                        <span id="mrvLog">{{projectData.melody_reverb_val}}</span>

                        <span>Melody effect value:</span>
                        <span id="mevLog">{{projectData.melody_effect_val}}</span>

                    </div>
                    <div class="hide">
                        <span id="drumSeqLog">{{projectData.drum_sequencer_steps}}</span>
                        <span id="melodyIsOn">{{projectData.melody_is_on}}</span>
                        <span id="melodySeqLog">{{projectData.melody_sequencer_steps}}</span>
                        <span id="cvLog">{{projectData.compressor_val}}</span>
                        <span id="bpmLog">{{projectData.bpm_val}}</span>
                        

                    </div>
                </div>
